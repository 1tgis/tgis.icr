{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0, 0, 0, 4",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Margin": "0, 0, 0, 8",
                "Padding": "42, 24, 24, 8",
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Center",
                        "Spacing": 12,
                        "Items": [
                            {
                                "BlockType": "text",
                                "Source": "{Season.LeagueInfo.LeagueName}",
                                "FontName": "{FontNameWide}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 28,
                                "HorizontalAlignment": "Center"
                            },
                            {
                                "BlockType": "text",
                                "Source": "[GRID OF] {Season.Name, Converter=StringToUpperString}",
                                "VerticalAlignment": "Center",
                                "HorizontalAlignment": "Center",
                                "FontName": "{FontNameWide}",
                                "FontSize": 75,
                                "MaxWidth": 800,
                                "Foreground": "#FFFFFF",
                                "TextOptions": {
                                    "Wrap": true,
                                    "HorizontalAlignment": "Left",
                                    "TextAlignment": "Center"
                                }
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft": 36,
                        "MarginRight": 0,
                        "PaddingRight": 4,
                        "Height": 72,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 0,
                "MarginLeft": 24,
                "MarginRight": 24,
                "MarginBottom": 0,
                "Width": "*",
                "Source": "separator.png"
            },

            //lines
            {
                "BlockType": "itemstack",
                "Orientation": "Vertical",
                "Width": "*",
                "Margin": "0, 0, 0, 0",
                "ItemStackOptions": {
                    "ItemSource": "{Lineups.Lineups}",
                    "Template": {
                        "BlockType": "stack",
                        "Margin": "0,0,0,0",
                        "Width": 1082,
                        "Height": 68,
                        "Orientation": "Horizontal",
                        "VerticalAlignment": "Center",
                        "Background": "#80000000",
                        "ColorizeBackground": {
                            "Enabled": true,
                            "Color": "{Item.Team.Color}",
                            "BlendPercentage": 70,
                            "ColorBlendingMode": "Screen",
                        },
                        "Triggers": [
                            {
                                "Condition": "{Item.IsNextTeam}",
                                "Setters": [
                                    {
                                        "Property": "MarginTop",
                                        "Value": 0
                                    }
                                ]
                            }
                        ],
                        "Items": [
                            //team
                            {
                                "BlockType": "stack",
                                "Width": 336,
                                "Margin": "36, 0, 0, 12",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "Orientation": "Horizontal",
                                "Spacing": 8,
                                "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                                "Items": [
                                    //logo
                                    {
                                        "BlockType": "image",
                                        "Height": 36,
                                        "MarginRight": 0,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Team.LogotypePath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },

                                    //name
                                    {
                                        "BlockType": "text",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Foreground": "{Foreground}",
                                        "Source": "{Item.Team.Name}",
                                        "FontSize": 28
                                    }
                                ]
                            },
                            //driver stack
                            {
                                "BlockType": "stack",
                                "Orientation": "Horizontal",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    //driver 1
                                    {
                                        "BlockType": "dock",
                                        "PaddingLeft": 24,
                                        "PaddingRight": 12,
                                        "Width": 580,
                                        "Items": [
                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Left",
                                                "VerticalAlignment": "Center",
                                                "Items": [
                                                    //flag
                                                    {
                                                        "BlockType": "image",
                                                        "Height": 48,
                                                        "MarginRight": 12,
                                                        "VerticalAlignment": "Center",
                                                        "ImageOptions": {
                                                            "Path": "{Item.Driver.Nationality.LogotypePath}",
                                                            "VerticalAlignment": "Center"
                                                        }
                                                    },

                                                    //name
                                                    {
                                                        "BlockType": "text",
                                                        "MaxWidth": 520,
                                                        "MarginLeft": 8,
                                                        "Source": "{Item.Driver.Name, Converter=StringToUpperString}",
                                                        "HorizontalAlignment": "Left",
                                                        "VerticalAlignment": "Center",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 36,
                                                        "Foreground": "{Foreground}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        ]
    }
}

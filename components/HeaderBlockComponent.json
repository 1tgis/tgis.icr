{
    "ComponentName": "HeaderBlockComponent",
    "BlockType": "dock",
    "Orientation": "Horizontal",
    "Items": [
        //headerLeft
        {
            "Name": "headerLeftPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "Spacing": 12,
            "HorizontalAlignment": "Left",
            "Items": [
                //league name
                {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "Items": [
                        {
                            "BlockType": "text",
                            "Source": "{Season.LeagueInfo.LeagueName, Converter=StringToUpperString}",
                            "FontName": "{FontNameWide}",
                            "FontSize": 20
                        },
                        {
                            "BlockType": "text",
                            "Source": " // {Season.Name}",
                            "VerticalAlignment": "Center",
                            "FontName": "{FontNameWide}",
                            "FontSize": 16,
                            "Foreground": "#FFFFFF"
                        }
                    ]
                },

                //main header
                {
                    "Name": "headerMainContent",
                    "BlockType": "stack",
                    "Spacing": 8,
                    "Items": [
                        // {
                        //     "BlockType": "image",
                        //     "Height": 36,
                        //     "Source": ""
                        // },

                        {
                            "BlockType": "text",
                            "VerticalAlignment": "Center",
                            "Source": " Standings",
                            "FontName": "{FontNameWide}",
                            "Height": 90,
                            "FontSize": 69
                        },

                        {
                            "BlockType": "text",
                            "MarginLeft": 12,
                            "MarginTop": 4,
                            "VerticalAlignment": "Center",
                            "Source": "<subHeader>",
                            "FontName": "{FontNameWide}",
                            "FontSize": 18
                        }
                    ]
                }
            ]
        },

        //headerRight
        {
            "Name": "headerRightPart",
            "BlockType": "stack",
            "Orientation": "Vertical",
            "MarginLeft": 48,
            "HorizontalAlignment": "Right",
            "Items": [
                {
                    "BlockType": "stack",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Vertical",
                            "Spacing": 8,
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "[Round] {Season.SeasonCurrentNumberEvent} [of] {Season.SeasonOverallNumberEvents}",
                                    "FontName": "{FontNameWide}",
                                    "Foreground": "{ForegroundDarker}",
                                    "FontSize": 18
                                },

                                {
                                    "BlockType": "text",
                                    "HorizontalAlignment": "Right",
                                    "Source": "[Season progress] {Season.SeasonProgressPercent}%",
                                    "FontName": "{FontNameWide}",
                                    "FontSize": 18
                                }
                            ]
                        },

                        {
                            "Name": "leagueLogo",
                            "BlockType": "image",
                            "Height": 82,
                            "MarginLeft": 36,
                            "Source": "{Season.LeagueInfo.LeagueLogo}"
                        }
                    ]
                }
            ]
        }
    ]
}
